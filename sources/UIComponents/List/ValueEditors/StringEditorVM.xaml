<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:RevitDBExplorer.WPF.Converters" 
                    xmlns:editors="clr-namespace:RevitDBExplorer.UIComponents.List.ValueEditors" 
                    >

    <DataTemplate DataType="{x:Type editors:StringEditorVM}" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.33*"/>                
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding ValueViewModel.Value}" Padding="1 2"/>
            <Button Grid.Column="1" Content="Save" Command="{Binding WriteCommand}"  Margin="5 0 0 0" Padding="7 2"/>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>